<html>
    <head>
        <meta http-equiv="refresh" content="60">

        <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
        <script type="text/javascript">
        $(document).ready(function(){
        });
        </script>

    </head>
    <body>
        <table>
        <tr>
            <th>Sensor</th>
            <th>Air Temp</th>
            <th>Snow Temp</th>
            <th>Snow Depth</th>
        </tr>
        {% for sensor in sensors %}
        <tr>
            <td><a href="/sensor/{{sensor.key.id_or_name}}/readings">{{ sensor.location_name }}</a></td>
            {% with cur_reading=sensor.reading_set.get %}
            <td>{{cur_reading.ambient_temp}}</td>
            <td>{{cur_reading.surface_temp}}</td>
            <td>{{cur_reading.snow_height}}</td>
            {% endwith %}
        </tr>
        {% endfor %}
        </table>
    </body>
</html>
