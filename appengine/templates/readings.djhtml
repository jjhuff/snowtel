<html>
    <head>
        <meta http-equiv="refresh" content="600">

        <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
        <script type='text/javascript' src='//www.google.com/jsapi'></script>

        <script type='text/javascript' src='/static/js/filter.js'></script>
        <script type='text/javascript' src='/static/js/plot.js'></script>

        <script type="text/javascript">
            {% if real_data %}
            var readings = {{readings_json|safe}}
            {% else %}
            var readings = {% include "sample_data.json" %}
            {% endif %}
        </script>
        <script type="text/javascript">
            google.load('visualization', '1.1', {packages: ['corechart', 'controls']});

            google.setOnLoadCallback(drawVisualization);
        </script>
    </head>
    <body>
        <h1>{{sensor.location_name}}</h1>
        <h2>Current Conditions</h2>
        <ul>
            <li><b>Air Temp</b>:&nbsp;<span id='cur_air_temp'</span></li>
            <li><b>Snow Temp</b>:&nbsp;<span id='cur_snow_temp'</span></li>
            <li><b>Snow Depth</b>:&nbsp;<span id='cur_snow_depth'</span></li>
        </ul>
        <br/>
        <div id="dashboard" style='width:100%'>
            <div id="chart" style='height: 300px;'></div>
            <div id="control" style='height: 50px;'></div>
        </div>
        <br/>
        {% if sensor.webcam_url %}
        <img src="{{sensor.webcam_url}}">
        {% endif %}
        <br/>
        <a href='/'>Back</a>
    </body>
</html>
